{
  "name": "project-files",
  "displayName": "project-files",
  "description": "Keeps an up-to-date list of project files and structure that copilot should reference when thinking.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "projectFiles.toggleState",
        "title": "Project Files: Toggle State",
        "category": "Project Files"
      },
      {
        "command": "projectFiles.runOnce",
        "title": "Project Files: Update Now",
        "category": "Project Files"
      }
    ],
    "configuration": {
      "title": "Project Files",
      "properties": {
        "projectFiles.excludeDirectories": {
          "type": "array",
          "default": [".git", "node_modules"],
          "description": "Directories to exclude from file listing"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package-vsix": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.24.0"
  }
}

